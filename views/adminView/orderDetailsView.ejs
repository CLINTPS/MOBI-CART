<%-include('../adminView/include/ad_header')-%>
<%-include('../adminView/include/_sidebar')-%>
<%-include('../adminView/include/ad_header')-%>
    <%-include('../adminView/include/_sidebar')-%>

        <div class="details">
            <div class="recentOrders">
              <h1>View product details</h1>
              <div class="cardHeader" style="width: 1250px;">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Category</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Orginal price</th>
                        <th scope="col">Discount price</th>
                        <th scope="col">Specification</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(ProductAllDetails){%>
                    <% ProductAllDetails.forEach((product)=>{ %>
                        <tr>
            
                            <td><img src="/product-img/<%= product.productId.images[0] %>" alt="product image"
                                style="height: 50px; width: 50px;">
                            </td>
                            <td>
                                <%=product.productId.ProductName %>
                            </td>
                            <td>
                                <%=product.quantity %>
                            </td>
                            <td>
                                <%=product.productId.Category %>
                            </td>
                            <td>
                                <%=product.productId.BrandName %>
                            </td>
                            <td>
                                <%=product.productId.Price %>
                            </td>
                            <td>
                                <%=product.productId.DiscountAmount %>
                            </td>
                            <td>
                                <%=product.productId.Specification1 %>
                                <br>
                                <%=product.productId.Specification2 %>
                                <br>
                                <%=product.productId.Specification3 %>
                                <br>
                                <%=product.productId.Specification4 %>
                            </td>
                        </tr>
                        <%})%>
                  </tbody>
                </table>
                <% } else { %>
                  <div class="card text-center">
                    <div class="card-body">
                      <h5 class="card-title">No Orders Yet</h5>
                      <p class="card-text">There are currently no orders available.</p>
                    </div>
                  </div>
                  <% } %>
                
              </div>
            </div>
          </div>
          