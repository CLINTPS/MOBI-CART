<%-include('../userView/include/_header')-%>
   <div class="text-center center-div d-flex align-items-center justify-content-center h-100", id="LoginPage" style="height: 100vh; width: 100%; background:linear-gradient(135deg, #3d3a3c, #ffffff)">
      <div class="wrapper text-center center-div align-items-center justify-content-center">
         <div class="title">
            Forgot Password
         </div>
         <p>Don't worry we are here for you!!</p>
         <% if(err){ %>
            <h6 class="alert alert-danger" style="margin: 5px;"><%-err%></h6>
       <% } %>
        <% if(locals.logout){%>
            <div class="alter alert-success text-center">
                <%= logout %>
            </div>
           <%}%>
         <form action="/user/forgot-PassWord" method="POST">
            <div class="field">
               <input type="text" name="email" id="myInput2" onchange="validateUserEmail()" required>
               <label>Enter the registered email</label>
            </div>
            <p class="msg" id="message2"></p>
            <br>
            <div class="field">
               <input type="submit" value="Send OTP">
            </div>
            <div class="signup-link">
                  Already have an account? <a href="/user/login-page">Login</a>
              </div>
         </form>
      </div>
   </div>
<%-include('../userView/include/_footer')-%>
<script src="/javascript/signupScript.js"></script>